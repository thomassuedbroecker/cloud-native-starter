kind: Deployment
apiVersion: apps/v1beta1
metadata:
  name: authors
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: authors
        version: v1
    spec:
      containers:
      - name: authors
        image: "de.icr.io/cloud-native/authors:2"
        imagePullPolicy: Always
        ports:
        - containerPort: 3000
      restartPolicy: Always
---
